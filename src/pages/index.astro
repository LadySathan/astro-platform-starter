<style>
  .hero {
    position: relative;
    padding: 10rem 0 5rem;
    background: linear-gradient(135deg, #f5edff 0%, #e6d6ff 100%);
    overflow: hidden;
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 3rem;
  }
  
  .hero-text h1 {
    margin-bottom: 1.5rem;
  }
  
  .hero-text p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    color: var(--text-gray);
    max-width: 90%;
  }
  
  .hero-buttons {
    display: flex;
    gap: 1rem;
  }
  
  .hero-image {
    position: relative;
    animation: float 6s ease-in-out infinite;
  }
  
  .hero-image img {
    border-radius: 10px;
    box-shadow: var(--shadow-lg);
  }
  
  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 4rem;
    position: relative;
    z-index: 10;
  }
  
  .stat-item {
    text-align: center;
    background-color: rgba(255, 255, 255, 0.8);
    padding: 1.5rem;
    border-radius: 10px;
    box-shadow: var(--shadow);
    backdrop-filter: blur(5px);
    transition: var(--transition);
  }
  
  .stat-item:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }
  
  .stat-item h3 {
    color: var(--primary-color);
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }
  
  .hero-wave {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
  }
  
  @keyframes float {
    0% {
      transform: translatey(0px);
    }
    50% {
      transform: translatey(-15px);
    }
    100% {
      transform: translatey(0px);
    }
  }
  
  /* Responsividade */
  @media (max-width: 992px) {
    .hero-content {
      grid-template-columns: 1fr;
    }
    
    .hero-text {
      text-align: center;
    }
    
    .hero-text p {
      max-width: 100%;
    }
    
    .hero-buttons {
      justify-content: center;
    }
    
    .hero-image {
      margin: 0 auto;
      max-width: 80%;
    }
  }
  
  @media (max-width: 768px) {
    .hero {
      padding: 8rem 0 4rem;
    }
    
    .hero-stats {
      grid-template-columns: 1fr;
      gap: 1rem;
      margin-top: 3rem;
    }
  }
</style>
