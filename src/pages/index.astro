---
// Layout base
import Layout from '../layouts/Layout.astro';

// Componentes
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import SobreFluxo from '../components/SobreFluxo.astro';
import AgendamentosAutomatizados from '../components/AgendamentosAutomatizados.astro';
import Beneficios from '../components/Beneficios.astro';
import SaberMais from '../components/SaberMais.astro';
import Planos from '../components/Planos.astro';
import Relatos from '../components/Relatos.astro';
import Parceiros from '../components/Parceiros.astro';
import Contato from '../components/Contato.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Fluxo | Agendamento AutomÃ¡tico">
  <Header />
  
  <main>
    <Hero />
    
    <section id="sobre" class="section-padding">
      <SobreFluxo />
    </section>
    
    <section id="agendamentos" class="section-padding bg-light">
      <AgendamentosAutomatizados />
    </section>
    
    <section id="beneficios" class="section-padding">
      <Beneficios />
    </section>
    
    <section id="saber-mais" class="section-padding bg-light">
      <SaberMais />
    </section>
    
    <section id="planos" class="section-padding">
      <Planos />
    </section>
    
    <section id="relatos" class="section-padding bg-light">
      <Relatos />
    </section>
    
    <section id="parceiros" class="section-padding">
      <Parceiros />
    </section>
    
    <section id="contato" class="section-padding">
      <Contato />
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  main {
    width: 100%;
    color: #2d2d2d;
    font-size: 16px;
    line-height: 1.6;
  }
  
  .section-padding {
    padding: 5rem 0;
  }
  
  .bg-light {
    background-color: #f9f5ff;
  }
  
  @media (max-width: 768px) {
    .section-padding {
      padding: 3rem 0;
    }
  }
</style>
